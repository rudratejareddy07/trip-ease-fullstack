            <div class="card-body">
              <p class="listing-title"><b></b><%= listings.title %></b></p>
              <p class="listing-price">
                  â‚¹<%= listings.priceFormatted %>/night
              </p>
            </div>
            </a>
          </div>
        </div>
        
      <% } %>
    </div>
  </div>
 <script>
  const listings = <%- JSON.stringify(allListings.map(l => ({
    title: l.title.toLowerCase(),
    url: "/listings/" + l._id
  }))) %>
</script>
</body>
