<% layout("/layouts/boilerplate.ejs") %>
<div class="row ">
<body>
    <form method="post" action="/listings/<%=listing._id%>?_method=PUT">
        <div class="col-8 offset-2" >
            <br><br>
        <div class="">
            <label for="title" class="form-label">Title</label> 
        <input name="listing[title]" type="text" value=<%=listing.title%> class="form-control">
        </div>
        <div class="">
            <label for="description" class="form-label">Description</label> 
        <textarea name="listing[description]" rows="2" cols="30" class="form-control" ><%= listing.description %>  </textarea>
        </div>
        
        <div class="">
            <label for="image" class="form-label">Image:</label> 
        <input name="listing[image]" value=<%=listing.image%>  class="form-control">
        </div>
        <div class="row">
        <div class="col-md-4">
            <label for="price" class="form-label">Price</label> 
        <input name="listing[price]" type="number" value=<%=listing.price%>  class="form-control">
        </div>
        <div class="col-md-8">
            <label for="location" class="form-label">Location</label> 
        <input name="listing[location]" type="text"value=<%=listing.location%>  class="form-control">
        </div>
        </div>
        <div >
            <label for="country" class="form-label">Country</label> 
            <input name="listing[country]" type="text" value=<%=listing.country%>  class="form-control">
        </div>
        <br>

        <button class="btn btn-dark edit-btn">Save</button>
        
    </form><br><br><br>
    </div>
</body>

</div>
